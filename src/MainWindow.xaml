<Window x:Class="BimAutomationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BIM Automation Tool - Advanced Export Manager" 
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5,3"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15" CornerRadius="5" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="BIM Automation Tool" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Advanced Export Manager for Revit" FontSize="12" Foreground="#ECF0F1" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="0,5">
            <!-- Export Options Tab -->
            <TabItem Header="Export Options">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Output Location -->
                        <GroupBox Header="Output Location">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="txtOutputPath" Grid.Column="0" Margin="5" Padding="5"/>
                                    <Button x:Name="btnBrowse" Content="Browse..." Grid.Column="1" Click="BtnBrowse_Click"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <!-- Export Formats -->
                        <GroupBox Header="Export Formats">
                            <WrapPanel>
                                <CheckBox x:Name="chkDWG" Content="DWG (AutoCAD)" IsChecked="True"/>
                                <CheckBox x:Name="chkPDF" Content="PDF Documents"/>
                                <CheckBox x:Name="chkIFC" Content="IFC (Industry Foundation Classes)"/>
                                <CheckBox x:Name="chkNWC" Content="NWC (Navisworks)"/>
                            </WrapPanel>
                        </GroupBox>

                        <!-- View Selection -->
                        <GroupBox Header="View Selection">
                            <StackPanel>
                                <CheckBox x:Name="chkFloorPlans" Content="Floor Plans" IsChecked="True"/>
                                <CheckBox x:Name="chkCeilingPlans" Content="Ceiling Plans" IsChecked="True"/>
                                <CheckBox x:Name="chkElevations" Content="Elevations" IsChecked="True"/>
                                <CheckBox x:Name="chkSections" Content="Sections" IsChecked="True"/>
                                <CheckBox x:Name="chk3DViews" Content="3D Views"/>
                                <CheckBox x:Name="chkDrafting" Content="Drafting Views"/>
                                <Separator Margin="5"/>
                                <CheckBox x:Name="chkOnlySheets" Content="Export only views placed on sheets"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Schedule Export -->
                        <GroupBox Header="Schedule Export">
                            <StackPanel>
                                <CheckBox x:Name="chkExportSchedules" Content="Export Schedules to CSV" IsChecked="True"/>
                                <CheckBox x:Name="chkExportSchedulesExcel" Content="Export Schedules to Excel" Margin="20,3,5,3"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Naming Convention -->
                        <GroupBox Header="Naming Convention">
                            <StackPanel>
                                <RadioButton x:Name="rbViewName" Content="Use View Name" IsChecked="True" Margin="5"/>
                                <RadioButton x:Name="rbSheetNumber" Content="Use Sheet Number + View Name" Margin="5"/>
                                <RadioButton x:Name="rbCustom" Content="Custom Prefix:" Margin="5"/>
                                <TextBox x:Name="txtCustomPrefix" Margin="25,5,5,5" Padding="5" IsEnabled="{Binding IsChecked, ElementName=rbCustom}"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- View List Tab -->
            <TabItem Header="View List">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <Button x:Name="btnSelectAll" Content="Select All" Click="BtnSelectAll_Click"/>
                        <Button x:Name="btnDeselectAll" Content="Deselect All" Click="BtnDeselectAll_Click"/>
                        <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                        <TextBox x:Name="txtFilter" Width="200" Padding="5" TextChanged="TxtFilter_TextChanged"/>
                    </StackPanel>
                    <DataGrid x:Name="dgViews" Grid.Row="1" Margin="5" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Export" Binding="{Binding IsSelected}" Width="60"/>
                            <DataGridTextColumn Header="View Name" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding ViewType}" Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Sheet" Binding="{Binding SheetNumber}" Width="100" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <GroupBox Header="DWG Export Settings">
                            <StackPanel>
                                <CheckBox x:Name="chkDWGLayerMapping" Content="Use layer mapping" IsChecked="True"/>
                                <CheckBox x:Name="chkDWGLineWeights" Content="Export line weights"/>
                                <CheckBox x:Name="chkDWGColors" Content="Export colors" IsChecked="True"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="PDF Export Settings">
                            <StackPanel>
                                <CheckBox x:Name="chkPDFCombine" Content="Combine all views into single PDF"/>
                                <CheckBox x:Name="chkPDFRaster" Content="Always rasterize" IsChecked="False"/>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="Quality:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="cmbPDFQuality" Width="150" SelectedIndex="1">
                                        <ComboBoxItem Content="Low (72 DPI)"/>
                                        <ComboBoxItem Content="Medium (150 DPI)"/>
                                        <ComboBoxItem Content="High (300 DPI)"/>
                                        <ComboBoxItem Content="Very High (600 DPI)"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="IFC Export Settings">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="IFC Version:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="cmbIFCVersion" Width="150" SelectedIndex="2">
                                        <ComboBoxItem Content="IFC 2x2"/>
                                        <ComboBoxItem Content="IFC 2x3"/>
                                        <ComboBoxItem Content="IFC 4"/>
                                    </ComboBox>
                                </StackPanel>
                                <CheckBox x:Name="chkIFCExportBaseQuantities" Content="Export base quantities" IsChecked="True"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="General Settings">
                            <StackPanel>
                                <CheckBox x:Name="chkCreateSubfolders" Content="Create subfolders by view type" IsChecked="True"/>
                                <CheckBox x:Name="chkOverwriteExisting" Content="Overwrite existing files"/>
                                <CheckBox x:Name="chkOpenFolderAfter" Content="Open output folder after export" IsChecked="True"/>
                                <CheckBox x:Name="chkDetailedLog" Content="Generate detailed log file" IsChecked="True"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Statistics -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="10" CornerRadius="5" Margin="0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Total Views:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTotalViews" Text="0" FontSize="18" Foreground="#2C3E50"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Selected:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtSelectedViews" Text="0" FontSize="18" Foreground="#27AE60"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Schedules:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTotalSchedules" Text="0" FontSize="18" Foreground="#2C3E50"/>
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <TextBlock Text="Est. Time:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtEstimatedTime" Text="--" FontSize="18" Foreground="#E67E22"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Progress Section -->
        <GroupBox Grid.Row="3" Header="Progress" Margin="0,5">
            <StackPanel>
                <TextBlock x:Name="txtCurrentOperation" Text="Ready to export..." Margin="5"/>
                <ProgressBar x:Name="progressBar" Height="25" Margin="5" Minimum="0" Maximum="100"/>
                <TextBlock x:Name="txtProgressDetails" Text="" Margin="5" FontSize="10" Foreground="Gray"/>
            </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnSaveConfig" Content="Save Config" Click="BtnSaveConfig_Click"/>
            <Button x:Name="btnLoadConfig" Content="Load Config" Click="BtnLoadConfig_Click"/>
            <Button x:Name="btnExport" Content="Start Export" Click="BtnExport_Click" 
                    Background="#27AE60" Foreground="White" FontWeight="Bold" MinWidth="120"/>
            <Button x:Name="btnCancel" Content="Cancel" Click="BtnCancel_Click" IsEnabled="False"/>
            <Button x:Name="btnClose" Content="Close" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
